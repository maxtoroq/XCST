<?xml version="1.0" encoding="utf-8" ?>
<c:module version='1.0' language='C#' xmlns:c='http://maxtoroq.github.io/XCST'>

   <c:template name='c:initial-template'>
      <foo>
         <c:variable name='i' value='1'/>
         <c:while test='i &lt; 5'>
            <c:value-of value='i'/>
            <c:set member='i' value='i + 1'/>
            <c:continue/>
            <c:text>!</c:text>
         </c:while>
      </foo>
   </c:template>

   <c:template name='expected'>
      <foo>1234</foo>
   </c:template>

</c:module>